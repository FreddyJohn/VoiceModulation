<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="StaticSeekBarTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="DynamicSeekBarTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SeekBarStyle">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:rotation">270</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:progressTint">@color/transparent</item>
        <!--<item name="android:tickMark">@drawable/seekbar_tickmark</item>-->
    </style>
    <declare-styleable name="SeekBarStyle" parent="Widget.AppCompat.SeekBar.Discrete">
        <attr name="android:layout_width">100dp</attr>
        <attr name="android:layout_height">90dp</attr>
        <attr name="android:rotation">270</attr>
        <attr name="android:thumb">@drawable/seekbar_thumb</attr>
    </declare-styleable>


</resources>