<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131313"
    tools:context=".ModulateActivity">
    <!--TODO redo vector creation for echo and backwards. Make them src compact and set background as the background
        TODO organize vectors, backgrounds, and layer list xml objects -->

    <FrameLayout
        android:id="@+id/record_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/stop_recording"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_gravity="center|left"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/stop_icon"
            android:contentDescription="TODO"
            android:onClick="onClick" />

        <ImageButton
            android:id="@+id/pause_recording"
            android:layout_width="47dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:background="@drawable/pause_icon"
            android:contentDescription="TODO"
            android:cropToPadding="false"
            android:onClick="onClick" />

        <ImageButton
            android:id="@+id/play"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_gravity="center|right|center_horizontal"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:adjustViewBounds="true"
            android:background="@drawable/play_icon"
            android:contentDescription="TODO"
            android:onClick="onClick" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/god_mode"
        android:name="com.example.voicemodulation.widgets.nControls"
        app:layout_constraintBottom_toTopOf="@+id/record_controls"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nestedScrollView"
        tools:layout="@layout/user_controls"
        android:layout_height="120dp"
        android:layout_width="wrap_content">

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="164dp"
        android:background="#392929"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/record_controls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/echo"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:background="@drawable/echo_modulate"
                    android:contentDescription="TODO"
                    android:onClick="onClick" />

                <ImageButton
                    android:id="@+id/backwards"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_backwards"
                    android:contentDescription="TODO"
                    android:onClick="onClick" />

                <ImageButton
                    android:id="@+id/flanger"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:background="@drawable/ic_flanger"
                    android:onClick="onClick" />
                <!--app:srcCompat="@drawable/ic_backwards" />-->

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/phaser"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:background="@drawable/ic_phaser"
                    android:contentDescription="TODO"
                    android:onClick="onClick" />

                <ImageButton
                    android:id="@+id/quantize"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/quantize"
                    android:onClick="onClick" />

                <ImageButton
                    android:id="@+id/squared"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:background="@drawable/squareroot"
                    android:onClick="onClick" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/phaser_triangle"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:background="@drawable/alien"
                    android:onClick="onClick" />

                <ImageButton
                    android:id="@+id/phaser_saw"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_robot_svgrepo_com"
                    android:onClick="onClick" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:background="@drawable/backwards_modulate"
                    tools:src="@drawable/alien" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/imageButton4"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:background="#3C3636"
                    android:gravity="center"
                    android:text="Flanger with Sqaure" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/backwards_modulate"
                    android:onClick="onClick" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:background="#530808" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>